<div class="container margin-bottom-25">
  <div class="col-sm-12">
    <div class="pull-left margin-top-5">

      {{ "dojo.teacher_web:class_view.click_on" | t() }}

      <a
        id="reset_attendance"
        data-bind="{{ onClick: markAllPresent() }}"
        class="margin-left-10">
        <img src="/img/icons/all_present.png" />
        {{ "dojo.teacher_web:class_view.present" | t() }}
      </a>

      <a
        id="mark_all_absent"
        data-bind="{{ onClick: markAllAbsent() }}"
        class="margin-left-10">
        <img src="/img/icons/all_absent.png" />
        {{ "dojo.teacher_web:class_view.absent" | t() }}
      </a>


    <div class="pull-right">
      <a
        id="cancel_attendance"
        class="btn btn-white"
        data-bind="{{ onClick: cancel() }}">
        {{ "dojo.teacher_web:class_view.cancel" | t() }}
      </a>
      <a
        id="save_attendance"
        class="btn btn-green"
        data-bind="{{ onClick: saveAttendance() }}">
        {{ "dojo.teacher_web:class_view.save_attendance" | t() }}
      </a>

    </div>
  </div>
</div>
</div>